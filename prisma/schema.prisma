generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  fullName  String
  email String @unique
  createdDate DateTime @default(now())
  role  Role @default(USER)
  password  String
  passwordConfirm String?
}

enum Role {
  USER
  ADMIN
}